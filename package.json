    "msl",
    "metal",
    "opengl",
    "webgl",
    "directx",
    "vulkan",
    "shader",
    "transpiler",
    "compiler",
    "transpile",
    "graphics"
  ],
  "author": "Alain Galvan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alaingalvan/crossshader/issues"
  },
  "homepage": "https://github.com/alaingalvan/crossshader#readme",
  "devDependencies": {
    "@types/node": "^10.12.x",
    "ava": "^0.25.x",
    "codecov": "^3.1.x",
    "coveralls": "^3.0.x",
    "nyc": "^13.0.x"
  }
}
